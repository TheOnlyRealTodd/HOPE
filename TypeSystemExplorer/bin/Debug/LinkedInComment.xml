<?xml version="1.0" encoding="utf-8" ?>
<MycroXaml Name="Form"
  xmlns:wf="System.Windows.Forms, System.Windows.Forms, Version=1.0.5000.0, Culture=neutral, PublicKeyToken=b77a5c561934e089"
  xmlns:def="def"
  xmlns:ref="ref">
  <wf:Form def:Name="LinkedInCommentUI" Text="Linked In" Size="600, 400" StartPosition="CenterScreen" ShowInTaskbar="false" MinimizeBox="false" MaximizeBox="false">
    <wf:Controls>
      <wf:TextBox def:Name="tbCommentText" Location="0, 0" Size="480, 350" Anchor="Top, Right, Bottom, Left" Multiline="true" WordWrap="true" ReadOnly="false" ScrollBars="Vertical" AcceptsReturn="true"/>
      <wf:Button def:Name="btnComment" Location="490, 10" Size="80, 25" Text="Comment" Click="{form.MakeComment}" Anchor="Top, Right"/>
      <wf:Button def:Name="btnCancelComment" Location="490, 40" Size="80, 25" Text="Cancel" Anchor="Top, Right"/>
    </wf:Controls>
    <wf:Form ref:Name="LinkedInCommentUI" CancelButton="{btnCancelComment}"/>
  </wf:Form>
</MycroXaml>

